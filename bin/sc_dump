#!/usr/bin/env python
#
# A tool for exporting a new RDFlib BerkeleyDB store as N-Quads.
#
# Useful for migrating BerkeleyDB stores across different version of Python.

from __future__ import unicode_literals, print_function

from os.path import exists, isdir
import rdflib
import sys

def usage():
    print("""usage: {} [sleepycat-directory]  ( | gzip > data.nq.gz )

Dumps the content of an RDFlib Sleeycat store on the standard output,
in the N-Quads format.
""".format(sys.argv[0]), file=sys.stderr)

def main():
    if len(sys.argv) != 2:
        usage()
        exit(1)
    elif sys.argv[1] in ["-h", "--help"]:
        usage()
        exit()
    elif not exists(sys.argv[1]) or not isdir(sys.argv[1]):
        print("ERROR: {} is not an existing directory\n".format(sys.argv[1]), file=sys.stderr)
        usage()
        exit(2)


    if sys.version_info[0] == 2:
        stdout = sys.stdout
    else:
        stdout = open(1, mode='bw')

    g = rdflib.ConjunctiveGraph('BerkeleyDB')
    g.open(sys.argv[1])
    g.serialize(stdout, format='nquads')

if __name__ == '__main__':
    main()
